{{>layout/header}}
<!-- 마이페이지 폼이 들어갈 자리 -->
<script>
	$(document).ready(function() {
		var form_member = $('form[name="form_member"]');
		$("#btn-member-delete").click(function() {
			if (confirm("정말로 회원탈퇴 하시겠습니까?")) {
				form_member.attr("action", "/mypage/delete");
				form_member.submit();
			}
		});
		$("#role").find('option[value="{{simple_user.role}}"]').attr('selected', true);
		$('input[name="enabled"]').each(function() {
			if ($(this).val() == "{{simple_user.enabled}}") {
				$(this).prop('checked', true);
			} else {
				$(this).prop('checked', false);
			}
		});
	});
</script>
<h2>회원 수정</h2>
<div class="col-md-12">
	<form method="post" action="/mypage/update" name="form_member">
		<div class="form-group">
			<label for="title">회원ID</label> <input readonly value="{{simple_user.username}}"
				type="text" class="form-control" name="username"
				placeholder="아이디를 입력하세요" required>
		</div>
		<div class="form-group">
			<label for="author"> 암호</label> <input value="" type="text"
				class="form-control" name="password" placeholder="암호를 입력하세요"
				required>
		</div>
		<div class="form-group">
			<label for="content"> 회원권한</label> <select name="role" id="role"
				class="form-control">
				<option value="USER">일반사용자</option>
				
			</select>
		</div>
		<div class="form-group">
			<label for="content"> 로그인가능</label> <input type="radio"
				name="enabled" value="true">허용 
		</div>
		<a href="javascript:history.go(-1)" role="button" class="btn btn-secondary">취소</a>
		<button type="submit" class="btn btn-primary" id="btn-member-save">수정</button>
		<button type="button" class="btn btn-primary" id="btn-member-delete">회원탈퇴</button>
		<input type="hidden" name="id" value="{{simple_user.id}}">
	</form>
</div>
{{>layout/footer}}

